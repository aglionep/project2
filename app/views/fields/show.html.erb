<h1> <%= @fields.name %> </h1> 


	<p> This field is the home of the <%= @fields.team %>, it is in the <%= @fields.league %>, it is located at <%= @fields.address %>
	</p>

<% @fields.reviews.each do |f| %>
	<%= f.comments %> Rating: <%= f.rating %> - posted by <strong> <%= f.user.name %> </strong>
	<% if f.user == current_user %> 
	<br>
		<button class="btn btn-default" type="submit">
		<%= link_to 'edit', edit_field_review_path(@fields, f) %> </button>
		<button class="btn btn-default" type="submit">
		<%= link_to 'delete', field_review_path(@fields, f), method: :delete %> </button>
	<% end %>
	<br>
<% end %>

<br>

<button class="btn btn-default" type="submit">
<%= link_to 'Back to Stadium List', fields_path %> </button>

<button class="btn btn-default" type="submit">
<%= link_to 'Review Stadium', new_field_review_path(@fields) %> </button>

